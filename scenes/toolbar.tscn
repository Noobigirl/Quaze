script/source = "extends Control
@export var slot : PackedScene

func _ready() -> void:
	for i in Toolbar.contents.size():
		var new_slot = slot.instantiate() # creating a slot for each gate
		new_slot.set_texture(Toolbar.contents[i].texture) # setting the icon displayed by the slot
		new_slot.slot_index = i
		$GridContainer.add_child(new_slot) # adding the slot to the toolbar
		#Toolbar.slot_pressed.connect(add_gate)
		

func add_gate(): # will now insctance the gate when the button is pressed
	var to_instance = Toolbar.contents[Toolbar.current_slot]
	get_parent().add_child(to_instance)
