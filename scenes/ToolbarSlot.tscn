resource_name = "toolbar_slot"
script/source = "extends Control

# -- for now
var slot_index: int # so tha we can access the gate scenes in the gloal
var is_pressed = false
var gate_position # we are not setting the position at this stage
# because the slots are not yet created
# using on ready creates something weird

func set_texture(_texture):
	$SlotContainer/GateIcon.texture = load(_texture)

func _on_area_2d_area_entered(area: Area2D) -> void:
	print(\"area detected\")

func _on_button_pressed() -> void:
	if not is_pressed: # to make sure we are emitting the signal only once
		Toolbar.current_slot = slot_index # used to retrieve the gate later
		gate_position = self.global_position
		Toolbar.slot_pressed.emit()
		is_pressed = true # so that the signal is emitted only for one button press
"

